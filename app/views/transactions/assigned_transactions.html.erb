<div class="w-50 bg-light mx-auto shadow my-4 py-4 px-4">

  <div class="">

    <h1>Assigned</h1>
    <div class="view-display">

      <% @transactions.sort_by{ |x| x.created_at }.reverse.each do |trans| %>
      <div class='group-cards'>
        <div class='card-text'>
          <h4><%= link_to trans.name, transaction_path(trans.id) %></h4>
          <p><%= trans.created_at.strftime("%d %b. %Y") %></p>
        </div>

      </div>
      <% end %>
      <div>
        <%= link_to 'All', transactions_path, class: 'btn btn-success text-light' %>
        <%= link_to 'Unassigned', unassigned_path, class: 'btn btn-primary text-light' %>
      </div>
    </div>
  </div>