
<div class="w-50 mx-auto bg-light shadow my-4 py-4 px-3" >
  <h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
    <% if logged_in? %>
   
    <tr>
      <td>This is the logged in user: <%= current_user.name %></td>
      <td><%= link_to 'Show', current_user, class: 'btn btn-success text-light' %></td>
      <td><%= link_to 'Edit', edit_user_path(current_user), class: 'btn btn-primary text-light' if current_user.provider.nil? %></td>
      <td><%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-light' %></td>
    </tr>

  <% end %>
  </tbody>
</table>

<br>


</div>


