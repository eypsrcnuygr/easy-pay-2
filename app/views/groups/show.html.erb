<div class="w-50 bg-light mx-auto shadow my-4 py-4 px-4 ">
  <p>
    <strong>Name:</strong>
    <%= @group.name %>
  </p>

  <p>
    <strong>Icon:</strong>
    <%= raw @group.icon %>
  </p>

  <p>
    <strong>Transactions:</strong>
    <% @groups.each do |group| %>
    <% group.transactions.each do |transaction| %>
    <ul>
      <li><%= transaction.name %></li>
    </ul>

    <% end %>
    <% end %>
  </p>
  <% @groups.each do |group| %>
  <% if group.user == current_user %>
  <div>
    <%= link_to 'Edit', edit_group_path(@group), class: 'btn btn-success text-light' %>
    <%= link_to 'Back', groups_path, class: 'btn btn-primary text-light' %>
   <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-light' %>
  </div>
<% else %>
  <div>
    <%= link_to 'Back', groups_path, class: 'btn btn-primary text-light' %>
  </div>
  <% end %>
  <% end %>
</div>